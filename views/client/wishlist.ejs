<%- include('../partials/header') %>

<div class="container mx-auto px-4 py-8">
    <div class="max-w-6xl mx-auto">
        <!-- Page Header -->
        <div class="mb-8">
            <h1 class="text-3xl font-bold text-gray-900 mb-2">My Wishlist</h1>
            <p class="text-gray-600">Save your favorite products for later</p>
        </div>

        <!-- Wishlist Content -->
        <% if (wishlist && wishlist.length > 0) { %>
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-6">
            <% wishlist.forEach(product => { %>
            <div class="bg-white rounded-lg shadow-md overflow-hidden hover:shadow-lg transition-shadow duration-300">
                <!-- Product Image -->
                <div class="relative">
                    <img src="<%= product.images && product.images[0] ? product.images[0] : '/placeholder.svg' %>" 
                         alt="<%= product.name %>" 
                         class="w-full h-48 object-cover">
                    
                    <!-- Remove from Wishlist Button -->
                    <button onclick="removeFromWishlist('<%= product._id %>')" 
                            class="absolute top-2 right-2 bg-red-500 text-white rounded-full p-2 hover:bg-red-600 transition-colors duration-200">
                        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
                        </svg>
                    </button>

                    <!-- Sale Badge -->
                    <% if (product.originalPrice && product.originalPrice > product.price) { %>
                    <div class="absolute top-2 left-2 bg-red-500 text-white text-xs font-bold px-2 py-1 rounded">
                        SALE
                    </div>
                    <% } %>
                </div>

                <!-- Product Info -->
                <div class="p-4">
                    <h3 class="text-lg font-semibold text-gray-900 mb-2 line-clamp-2">
                        <a href="/client/product/<%= product._id %>" class="hover:text-blue-600">
                            <%= product.name %>
                        </a>
                    </h3>
                    
                    <!-- Price -->
                    <div class="flex items-center space-x-2 mb-3">
                        <span class="text-xl font-bold text-gray-900">$<%= product.price.toFixed(2) %></span>
                        <% if (product.originalPrice && product.originalPrice > product.price) { %>
                        <span class="text-sm text-gray-500 line-through">$<%= product.originalPrice.toFixed(2) %></span>
                        <% } %>
                    </div>

                    <!-- Rating -->
                    <% if (product.averageRating) { %>
                    <div class="flex items-center mb-3">
                        <div class="flex items-center">
                            <% for (let i = 1; i <= 5; i++) { %>
                            <svg class="w-4 h-4 <%= i <= product.averageRating ? 'text-yellow-400' : 'text-gray-300' %>" 
                                 fill="currentColor" viewBox="0 0 20 20">
                                <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"></path>
                            </svg>
                            <% } %>
                        </div>
                        <span class="text-sm text-gray-600 ml-1">(<%= product.reviewCount || 0 %>)</span>
                    </div>
                    <% } %>

                    <!-- Stock Status -->
                    <div class="mb-4">
                        <% if (product.stock > 0) { %>
                        <span class="text-sm text-green-600 font-medium">In Stock</span>
                        <% } else { %>
                        <span class="text-sm text-red-600 font-medium">Out of Stock</span>
                        <% } %>
                    </div>

                    <!-- Action Buttons -->
                    <div class="flex space-x-2">
                        <button onclick="addToCart('<%= product._id %>')" 
                                class="flex-1 bg-blue-600 text-white py-2 px-4 rounded-md hover:bg-blue-700 transition-colors duration-200 font-medium">
                            Add to Cart
                        </button>
                        <a href="/client/product/<%= product._id %>" 
                           class="bg-gray-100 text-gray-700 py-2 px-4 rounded-md hover:bg-gray-200 transition-colors duration-200 font-medium">
                            View
                        </a>
                    </div>
                </div>
            </div>
            <% }); %>
        </div>

        <% } else { %>
        <!-- Empty State -->
        <div class="text-center py-12">
            <div class="mb-6">
                <svg class="mx-auto h-24 w-24 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z"></path>
                </svg>
            </div>
            <h3 class="text-lg font-medium text-gray-900 mb-2">Your wishlist is empty</h3>
            <p class="text-gray-600 mb-6">Start adding products to your wishlist to save them for later.</p>
            <a href="/client/shop" 
               class="inline-flex items-center px-4 py-2 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500">
                Start Shopping
            </a>
        </div>
        <% } %>
    </div>
</div>

<script>
function removeFromWishlist(productId) {
    if (confirm('Are you sure you want to remove this item from your wishlist?')) {
        fetch(`/api/users/wishlist/${productId}`, {
            method: 'DELETE',
            headers: {
                'Content-Type': 'application/json',
            }
        })
        .then(response => {
            if (response.ok) {
                // Remove the product card from the DOM
                const productCard = document.querySelector(`[onclick="removeFromWishlist('${productId}')"]`).closest('.bg-white');
                productCard.remove();
                
                // Check if there are any remaining items
                const remainingItems = document.querySelectorAll('.bg-white.rounded-lg.shadow-md');
                if (remainingItems.length === 0) {
                    location.reload(); // Reload to show empty state
                }
            } else {
                alert('Failed to remove item from wishlist');
            }
        })
        .catch(error => {
            console.error('Error:', error);
            alert('An error occurred while removing the item');
        });
    }
}

function addToCart(productId) {
    fetch('/api/cart/add', {
        method: 'POST',
        headers: {
            'Content-Type': 'application/json',
        },
        body: JSON.stringify({
            productId: productId,
            quantity: 1
        })
    })
    .then(response => response.json())
    .then(data => {
        if (data.success) {
            alert('Product added to cart successfully!');
            // Update cart count in header if it exists
            const cartCount = document.getElementById('cart-count');
            if (cartCount) {
                const currentCount = parseInt(cartCount.textContent) || 0;
                cartCount.textContent = currentCount + 1;
            }
        } else {
            alert('Failed to add product to cart: ' + data.message);
        }
    })
    .catch(error => {
        console.error('Error:', error);
        alert('An error occurred while adding to cart');
    });
}
</script>

<%- include('../partials/footer') %> 