    <div class="container">
        <div class="product-detail-container">
    <div class="row">
                <!-- Enhanced Product Images -->
        <div class="col-lg-6">
            <div class="product-gallery">
                <!-- Main Image -->
                        <div class="main-image-container">
                            <img id="mainImage" src="<%= product.images && product.images.length > 0 ? product.images[0] : '/placeholder.svg' %>" 
                                 alt="<%= product.name %>">
                </div>
                
                <!-- Thumbnail Images -->
                <% if (product.images && product.images.length > 1) { %>
                    <div class="thumbnail-images">
                        <div class="row">
                            <% product.images.forEach((image, index) => { %>
                                <div class="col-3 mb-2">
                                    <img src="<%= image %>" alt="<%= product.name %>" 
                                                 class="thumbnail-img <%= index === 0 ? 'active' : '' %>"
                                         onclick="changeMainImage('<%= image %>', this)">
                                </div>
                            <% }); %>
                        </div>
                    </div>
                <% } %>
            </div>
        </div>
        
                <!-- Enhanced Product Info -->
        <div class="col-lg-6">
            <div class="product-info">
                        <!-- Enhanced Product Badges -->
                <div class="mb-3">
                            <% if (product.discountPercentage && product.discountPercentage > 0) { %>
                                <span class="product-badge badge-danger">🔥 -<%= product.discountPercentage %>% OFF</span>
                    <% } %>
                    <% if (product.isNew) { %>
                                <span class="product-badge badge-success">🆕 NEW</span>
                    <% } %>
                    <% if (product.stockQuantity === 0) { %>
                                <span class="product-badge badge-secondary">❌ OUT OF STOCK</span>
                    <% } %>
            </div>
            
                        <!-- Enhanced Product Title -->
                        <h1 class="product-title"><%= product.name %></h1>
                
                        <!-- Enhanced Rating -->
                        <div class="product-rating">
                    <div class="stars">
                        <% for (let i = 1; i <= 5; i++) { %>
                                    <i class="fas fa-star <%= i <= (product.rating || 0) ? 'text-warning' : 'text-muted' %>"></i>
                        <% } %>
                    </div>
                    <span class="rating-text ms-2">(<%= product.reviewCount || 0 %> reviews)</span>
                            <a href="#reviews" class="review-link ms-3">Write a review</a>
                </div>
                
                        <!-- Enhanced Price -->
                        <div class="product-price">
                            <% if (product.discountPercentage && product.discountPercentage > 0) { %>
                                <span class="price-original">$<%= product.originalPrice || product.price %></span>
                    <% } %>
                            <span class="price-current">$<%= product.price %></span>
                </div>
                
                        <!-- Enhanced Product Details -->
                        <div class="product-details">
                    <div class="row">
                        <div class="col-6">
                                    <p><strong>Brand:</strong> <%= product.brand || 'N/A' %></p>
                                    <p><strong>Category:</strong> <%= product.category || 'N/A' %></p>
                        </div>
                        <div class="col-6">
                                    <p><strong>SKU:</strong> <%= product.sku || 'N/A' %></p>
                            <p><strong>Availability:</strong> 
                                <% if (product.stockQuantity > 0) { %>
                                            <span class="text-success">✅ In Stock (<%= product.stockQuantity %>)</span>
                                <% } else { %>
                                            <span class="text-danger">❌ Out of Stock</span>
                                <% } %>
                            </p>
                        </div>
                    </div>
                </div>
                
                        <!-- Enhanced Description -->
                        <div class="product-description">
                            <h5><i class="fas fa-info-circle me-2"></i>Description</h5>
                            <p><%= product.description || 'No description available.' %></p>
