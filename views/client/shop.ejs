<!DOCTYPE html>
<!-- Shop Header -->
<section class="shop-header">
    <div class="container">
        <h1 class="shop-title">Shop Our Collection</h1>
        <p class="shop-subtitle">Discover premium fashion and handmade art</p>
    </div>
</section>

<!-- Filters Section -->
<section class="filters-section">
    <div class="container">
        <div class="row">
            <div class="col-lg-3">
                <div class="filter-card">
                    <h5 class="filter-title">Categories</h5>
                    <div class="filter-options">
                        <a href="/client/shop" class="filter-option <%= !currentCategory ? 'active' : '' %>">All Categories</a>
                        <% if (typeof categories !== 'undefined' && categories.length > 0) { %>
                            <% categories.forEach(category => { %>
                                <a href="/client/shop?category=<%= encodeURIComponent(category) %>" 
                                   class="filter-option <%= currentCategory === category ? 'active' : '' %>">
                                    <%= category %>
                                </a>
                            <% }); %>
                        <% } %>
                    </div>
                </div>
                
                <div class="filter-card mt-4">
                    <h5 class="filter-title">Brands</h5>
                    <div class="filter-options">
                        <a href="/client/shop" class="filter-option <%= !currentBrand ? 'active' : '' %>">All Brands</a>
                        <% if (typeof brands !== 'undefined' && brands.length > 0) { %>
                            <% brands.forEach(brand => { %>
                                <a href="/client/shop?brand=<%= encodeURIComponent(brand) %>" 
                                   class="filter-option <%= currentBrand === brand ? 'active' : '' %>">
                                    <%= brand %>
                                </a>
                            <% }); %>
                        <% } %>
                    </div>
                </div>
                
                <div class="filter-card mt-4">
                    <h5 class="filter-title">Price Range</h5>
                    <form action="/client/shop" method="GET" class="price-filter">
                        <div class="row">
                            <div class="col-6">
                                <input type="number" name="minPrice" placeholder="Min" 
                                       value="<%= minPrice || '' %>" class="form-control">
                            </div>
                            <div class="col-6">
                                <input type="number" name="maxPrice" placeholder="Max" 
                                       value="<%= maxPrice || '' %>" class="form-control">
                            </div>
                        </div>
                        <button type="submit" class="btn btn-primary btn-sm w-100 mt-2">Apply</button>
                    </form>
                </div>
            </div>
            
            <div class="col-lg-9">
                <!-- Sort and View Options -->
                <div class="d-flex justify-content-between align-items-center mb-4">
                    <div class="sort-options">
                        <select class="form-select" onchange="window.location.href=this.value">
                            <option value="/client/shop<%= currentCategory ? '?category=' + currentCategory : '' %>" 
                                    <%= !currentSort ? 'selected' : '' %>>Sort by: Newest</option>
                            <option value="/client/shop?sort=price_asc<%= currentCategory ? '&category=' + currentCategory : '' %>" 
                                    <%= currentSort === 'price_asc' ? 'selected' : '' %>>Price: Low to High</option>
                            <option value="/client/shop?sort=price_desc<%= currentCategory ? '&category=' + currentCategory : '' %>" 
                                    <%= currentSort === 'price_desc' ? 'selected' : '' %>>Price: High to Low</option>
                            <option value="/client/shop?sort=rating<%= currentCategory ? '&category=' + currentCategory : '' %>" 
                                    <%= currentSort === 'rating' ? 'selected' : '' %>>Highest Rated</option>
                        </select>
                    </div>
                    <div class="view-options">
                        <span class="text-muted">
                            <% if (typeof products !== 'undefined' && products.length > 0) { %>
                                Showing <%= products.length %> of <%= totalProducts || products.length %> products
                            <% } %>
                        </span>
                    </div>
                </div>
                
                <!-- Products Grid -->
                <div class="row">
                    <% if (typeof products !== 'undefined' && products.length > 0) { %>
                        <% products.forEach(product => { %>
                            <div class="col-lg-3 col-md-6 mb-4">
                                <div class="product-card">
                                    <div class="product-image">
                                        <img src="<%= product.image %>" alt="<%= product.name %>" class="img-fluid">
                                        <div class="product-overlay">
                                            <a href="/client/product/<%= product._id || product.id %>" class="btn btn-primary">
                                                <i class="fas fa-eye me-2"></i>View Details
                                            </a>
                                        </div>
                                        <% if (product.discount) { %>
                                            <div class="discount-badge">
                                                <%= product.discount %>% OFF
                                            </div>
                                        <% } %>
                                    </div>
                                    <div class="product-info">
                                        <h5 class="product-title"><%= product.name %></h5>
                                        <p class="product-category"><%= product.category %></p>
                                        <div class="product-price">
                                            <% if (product.originalPrice && product.originalPrice > product.price) { %>
                                                <span class="original-price">₹<%= product.originalPrice %></span>
                                                <span class="current-price">₹<%= product.price %></span>
                                                <span class="discount-savings">
                                                    <i class="fas fa-tag me-1"></i>Save ₹<%= (product.originalPrice - product.price).toFixed(0) %>
                                                </span>
                                            <% } else if (product.discount && product.discount > 0) { %>
                                                <% const originalPrice = (product.price / (1 - product.discount / 100)).toFixed(0) %>
                                                <span class="original-price">₹<%= originalPrice %></span>
                                                <span class="current-price">₹<%= product.price %></span>
                                                <span class="discount-savings">
                                                    <i class="fas fa-tag me-1"></i>Save ₹<%= (originalPrice - product.price).toFixed(0) %>
                                                </span>
                                            <% } else { %>
                                                <span class="current-price">₹<%= product.price %></span>
                                            <% } %>
                                        </div>
                                        <div class="product-rating">
                                            <div class="stars">
                                                <% for(let i = 0; i < 5; i++) { %>
                                                    <% if (i < (product.rating || 0)) { %>
                                                        <i class="fas fa-star text-warning"></i>
                                                    <% } else { %>
                                                        <i class="far fa-star text-muted"></i>
                                                    <% } %>
                                                <% } %>
                                            </div>
                                            <span class="rating-count">(<%= product.reviewCount || 0 %>)</span>
                                        </div>
                                        <div class="product-actions">
                                            <button class="btn btn-primary btn-sm add-to-cart-btn" data-product-id="<%= product._id || product.id %>">
                                                <i class="fas fa-shopping-cart me-2"></i>Add to Cart
                                            </button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        <% }); %>
                    <% } else { %>
                        <div class="col-12 text-center">
                            <div class="no-products">
                                <i class="fas fa-search fa-3x text-muted mb-3"></i>
                                <h4>No Products Found</h4>
                                <p class="text-muted">Try adjusting your filters or browse our other categories.</p>
                                <a href="/client/shop" class="btn btn-primary">
                                    <i class="fas fa-shopping-bag me-2"></i>View All Products
                                </a>
                            </div>
                        </div>
                    <% } %>
                </div>
                
                <!-- Pagination -->
                <% if (typeof totalPages !== 'undefined' && totalPages > 1) { %>
                    <div class="row">
                        <div class="col-12">
                            <nav aria-label="Product pagination">
                                <ul class="pagination justify-content-center">
                                    <% if (currentPage > 1) { %>
                                        <li class="page-item">
                                            <a class="page-link" href="/client/shop?page=<%= currentPage - 1 %><%= currentCategory ? '&category=' + currentCategory : '' %><%= currentBrand ? '&brand=' + currentBrand : '' %>">
                                                Previous
                                            </a>
                                        </li>
                                    <% } %>
                                    
                                    <% for(let i = 1; i <= totalPages; i++) { %>
                                        <li class="page-item <%= i === currentPage ? 'active' : '' %>">
                                            <a class="page-link" href="/client/shop?page=<%= i %><%= currentCategory ? '&category=' + currentCategory : '' %><%= currentBrand ? '&brand=' + currentBrand : '' %>">
                                                <%= i %>
                                            </a>
                                        </li>
                                    <% } %>
                                    
                                    <% if (currentPage < totalPages) { %>
                                        <li class="page-item">
                                            <a class="page-link" href="/client/shop?page=<%= currentPage + 1 %><%= currentCategory ? '&category=' + currentCategory : '' %><%= currentBrand ? '&brand=' + currentBrand : '' %>">
                                                Next
                                            </a>
                                        </li>
                                    <% } %>
                                </ul>
                            </nav>
                        </div>
                    </div>
                <% } %>
            </div>
        </div>
    </div>
</section>

