    .filter-card {
        animation: slideInLeft 0.6s ease-out;
    }
    
    .filter-card:nth-child(1) { animation-delay: 0.1s; }
    .filter-card:nth-child(2) { animation-delay: 0.2s; }
    .filter-card:nth-child(3) { animation-delay: 0.3s; }
    
