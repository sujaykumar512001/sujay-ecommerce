<!-- views/partials/products-loading.ejs -->
<div class="min-h-screen bg-gray-100">
  <!-- Header Skeleton -->
  <div class="sticky top-0 z-50 w-full border-b bg-white/90 backdrop-blur">
    <div class="container mx-auto px-4">
      <div class="flex h-16 items-center justify-between">
        <div class="h-8 w-32 bg-gray-300 animate-pulse rounded"></div>
        <div class="h-10 w-64 bg-gray-300 animate-pulse rounded"></div>
        <div class="flex items-center space-x-4">
          <div class="h-8 w-8 rounded-full bg-gray-300 animate-pulse"></div>
          <div class="h-8 w-8 rounded-full bg-gray-300 animate-pulse"></div>
          <div class="h-8 w-20 bg-gray-300 animate-pulse rounded"></div>
        </div>
      </div>
    </div>
  </div>

  <!-- Main Content -->
  <main class="container mx-auto px-4 py-8">
    <!-- Page Header Skeleton -->
    <div class="mb-8">
      <div class="h-8 w-48 bg-gray-300 animate-pulse mb-2 rounded"></div>
      <div class="h-4 w-96 bg-gray-300 animate-pulse rounded"></div>
    </div>

    <!-- Filters Skeleton -->
    <div class="mb-8 space-y-4">
      <div class="flex gap-2">
        <div class="h-10 w-64 bg-gray-300 animate-pulse rounded"></div>
        <div class="h-10 w-20 bg-gray-300 animate-pulse rounded"></div>
      </div>
      <div class="flex flex-wrap items-center gap-4">
        <div class="h-10 w-48 bg-gray-300 animate-pulse rounded"></div>
        <div class="h-10 w-48 bg-gray-300 animate-pulse rounded"></div>
        <div class="h-10 w-20 bg-gray-300 animate-pulse rounded"></div>
      </div>
    </div>

    <!-- Products Grid Skeleton -->
    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-6">
      <% for (let i = 0; i < 12; i++) { %>
        <div class="space-y-4">
          <div class="h-64 w-full bg-gray-300 animate-pulse rounded-lg"></div>
          <div class="h-4 w-3/4 bg-gray-300 animate-pulse rounded"></div>
          <div class="h-4 w-1/2 bg-gray-300 animate-pulse rounded"></div>
          <div class="h-8 w-1/3 bg-gray-300 animate-pulse rounded"></div>
          <div class="h-10 w-full bg-gray-300 animate-pulse rounded"></div>
        </div>
      <% } %>
    </div>

    <!-- Pagination Skeleton -->
    <div class="flex justify-center items-center space-x-2 mt-12">
      <div class="h-10 w-20 bg-gray-300 animate-pulse rounded"></div>
      <div class="h-10 w-10 bg-gray-300 animate-pulse rounded"></div>
      <div class="h-10 w-10 bg-gray-300 animate-pulse rounded"></div>
      <div class="h-10 w-10 bg-gray-300 animate-pulse rounded"></div>
      <div class="h-10 w-20 bg-gray-300 animate-pulse rounded"></div>
    </div>
  </main>

  <!-- Footer Skeleton -->
  <div class="bg-gray-900 text-white">
    <div class="container mx-auto px-4 py-12">
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8">
        <% for (let i = 0; i < 4; i++) { %>
          <div class="space-y-4">
            <div class="h-6 w-32 bg-gray-700 animate-pulse rounded"></div>
            <div class="space-y-2">
              <div class="h-4 w-full bg-gray-700 animate-pulse rounded"></div>
              <div class="h-4 w-3/4 bg-gray-700 animate-pulse rounded"></div>
              <div class="h-4 w-1/2 bg-gray-700 animate-pulse rounded"></div>
            </div>
          </div>
        <% } %>
      </div>
    </div>
  </div>
</div>
