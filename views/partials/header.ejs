                    e.preventDefault();
                    e.stopPropagation();
                    console.log('[Dropdown] Button clicked');
                    toggleUserDropdown();
                };
                console.log('[Dropdown] Click handler attached');
                
                // Test the dropdown is working
                console.log('[Dropdown] Initial menu state - display:', menu.style.display);
                console.log('[Dropdown] Initial menu state - show class:', menu.classList.contains('show'));
            } else {
                console.error('[Dropdown] Button or menu not found');
            }
            
            // Close on outside click
