                background: white;
                color: #6c757d;
                transition: all 0.2s ease;
            }
            
            .header-order-btn:hover {
                background: #007bff;
                color: white;
                border-color: #007bff;
                text-decoration: none;
            }
            
            .header-order-btn.primary {
                background: #007bff;
                color: white;
                border-color: #007bff;
            }
            
            .header-order-btn.primary:hover {
                background: #0056b3;
                border-color: #0056b3;
            }
        `;
        document.head.appendChild(style);
        
        // Header Orders Functionality
        let headerOrders = [];
        let ordersSectionExpanded = false;
        
        // Toggle orders section in header dropdown
        function toggleOrdersSection() {
            const ordersSection = document.querySelector('.orders-section');
            const ordersToggle = document.getElementById('ordersToggle');
            const ordersListContainer = document.getElementById('ordersListContainer');
            const ordersLoadingItem = document.getElementById('ordersLoadingItem');
            const noOrdersItem = document.getElementById('noOrdersItem');
            
            if (ordersSectionExpanded) {
                // Collapse
                ordersSection.classList.remove('expanded');
                ordersListContainer.style.display = 'none';
                noOrdersItem.style.display = 'none';
                ordersSectionExpanded = false;
            } else {
                // Expand and load orders
                ordersSection.classList.add('expanded');
                loadHeaderOrders();
                ordersSectionExpanded = true;
            }
        }
        
        // Load orders for header dropdown
        async function loadHeaderOrders() {
            const ordersListContainer = document.getElementById('ordersListContainer');
            const ordersLoadingItem = document.getElementById('ordersLoadingItem');
            const noOrdersItem = document.getElementById('noOrdersItem');
            const ordersList = document.getElementById('ordersList');
            
            try {
                // Show loading state
                ordersLoadingItem.style.display = 'block';
                ordersListContainer.style.display = 'none';
                noOrdersItem.style.display = 'none';
                
                // Fetch orders from API
                const response = await fetch('/orders/api/my-orders', {
                    headers: {
                        'Authorization': `Bearer ${localStorage.getItem('token')}`,
                        'Content-Type': 'application/json'
                    }
                });
                
                if (!response.ok) {
                    throw new Error('Failed to fetch orders');
                }
                
                headerOrders = await response.json();
                
                // Hide loading, show content
                ordersLoadingItem.style.display = 'none';
                
                if (headerOrders.length === 0) {
                    noOrdersItem.style.display = 'block';
                } else {
                    ordersListContainer.style.display = 'block';
                    renderHeaderOrders(headerOrders);
                }
                
            } catch (error) {
                console.error('Error loading header orders:', error);
                ordersLoadingItem.style.display = 'none';
                noOrdersItem.style.display = 'block';
                noOrdersItem.innerHTML = `
                    <div class="dropdown-item text-center text-muted">
                        <i class="fas fa-exclamation-triangle me-2"></i>
                        Error loading orders
                    </div>
                `;
            }
        }
        
        // Render orders in header dropdown
        function renderHeaderOrders(ordersList) {
            const ordersListEl = document.getElementById('ordersList');
            
            if (ordersList.length === 0) {
                ordersListEl.innerHTML = '<div class="dropdown-item text-center text-muted">No orders found</div>';
                return;
            }
            
            // Show only the most recent 3 orders to keep dropdown manageable
            const recentOrders = ordersList.slice(0, 3);
            
            ordersListEl.innerHTML = recentOrders.map((order, index) => `
                <div class="header-order-item" onclick="toggleHeaderOrderDetails('${order._id}')">
                    <div class="header-order-header">
                        <span class="header-order-id">Order #${order._id.slice(-8).toUpperCase()}</span>
                        <span class="header-order-status ${order.status}">${order.status}</span>
                    </div>
                    <div class="header-order-meta">
                        <span class="header-order-date">${new Date(order.createdAt).toLocaleDateString()}</span>
                        <span class="header-order-total">$${order.total.toFixed(2)}</span>
                    </div>
                    <div class="header-order-details" id="header-details-${order._id}">
                        <div class="header-order-items">
                            <strong>Items:</strong> ${order.items.length} item${order.items.length !== 1 ? 's' : ''}
                        </div>
                        <div class="header-order-summary">
                            <div>Subtotal: $${order.subtotal.toFixed(2)}</div>
                            <div>Shipping: $${order.shipping.toFixed(2)}</div>
                            <div>Tax: $${order.tax.toFixed(2)}</div>
                        </div>
                        <div class="header-order-actions">
                            <a href="/orders/${order._id}" class="header-order-btn primary">View</a>
                            <a href="/users/profile#orders" class="header-order-btn">All Orders</a>
                        </div>
                    </div>
                </div>
            `).join('');
            
            // Add "View All Orders" link if there are more than 3 orders
            if (ordersList.length > 3) {
                ordersListEl.innerHTML += `
                    <div class="header-order-item text-center">
                        <a href="/users/profile#orders" class="header-order-btn primary">
                            View All ${ordersList.length} Orders
                        </a>
                    </div>
                `;
            }
        }
        
        // Toggle individual order details in header
        function toggleHeaderOrderDetails(orderId) {
            const detailsEl = document.getElementById(`header-details-${orderId}`);
            
            if (detailsEl.classList.contains('expanded')) {
                detailsEl.classList.remove('expanded');
            } else {
                detailsEl.classList.add('expanded');
            }
        }
    </script>
