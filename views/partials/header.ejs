        // User dropdown toggle function
        function toggleUserDropdown() {
            console.log('[Dropdown] Toggle function called');
            
            const menu = document.getElementById('userDropdownMenu');
            const button = document.getElementById('userDropdown');
            
            if (!menu || !button) {
                console.error('[Dropdown] Elements not found:', { menu: !!menu, button: !!button });
                return;
            }
            
            // Check if menu is currently visible
            const isVisible = menu.style.display === 'block' || menu.classList.contains('show');
            
            console.log('[Dropdown] Current visibility:', isVisible);
            console.log('[Dropdown] Menu display style:', menu.style.display);
            console.log('[Dropdown] Menu has show class:', menu.classList.contains('show'));
            
            if (isVisible) {
                // Hide
                menu.style.display = 'none';
                menu.classList.remove('show');
                button.setAttribute('aria-expanded', 'false');
                console.log('[Dropdown] Hidden');
            } else {
                // Show
                menu.style.display = 'block';
                menu.classList.add('show');
                button.setAttribute('aria-expanded', 'true');
                console.log('[Dropdown] Shown');
            }
        }
        
        // Function to hide dropdown
        function hideDropdown() {
            const menu = document.getElementById('userDropdownMenu');
            const button = document.getElementById('userDropdown');
            
            if (menu) {
                menu.style.display = 'none';
                menu.classList.remove('show');
            }
            if (button) {
                button.setAttribute('aria-expanded', 'false');
            }
            console.log('[Dropdown] Hidden by external call');
        }
        
