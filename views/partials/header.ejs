                console.log('[Header] Logout confirmed, proceeding...');
                
                // Close dropdown first
                hideDropdown();
                
                // Use enhanced logout handler if available
                if (window.logoutHandler) {
                    console.log('[Header] Using enhanced logout handler');
                    window.logoutHandler.handleLogout({ preventDefault: () => {} });
                } else {
                    console.log('[Header] Using fallback logout');
                    // Fallback to direct logout
                    window.location.href = '/users/logout';
                }
            } else {
                console.log('[Header] Logout cancelled by user');
            }
        }
        
