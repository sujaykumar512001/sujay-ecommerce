<!DOCTYPE html>
<!-- Admin Analytics Dashboard -->
<div class="analytics-dashboard">
    <!-- Page Header -->
    <div class="page-header">
        <div class="container-fluid">
            <div class="row align-items-center">
                <div class="col-md-6">
                    <h1 class="page-title">
                        <i class="fas fa-chart-line me-3"></i>Analytics Dashboard
                    </h1>
                    <p class="page-subtitle">Comprehensive insights into your e-commerce performance</p>
                </div>
                <div class="col-md-6 text-end">
                    <div class="date-range">
                        <select id="dateRange" class="form-select">
                            <option value="7">Last 7 Days</option>
                            <option value="30" selected>Last 30 Days</option>
                            <option value="90">Last 90 Days</option>
                            <option value="365">Last Year</option>
                        </select>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Key Metrics -->
    <section class="key-metrics">
        <div class="container-fluid">
            <div class="row">
                <div class="col-lg-3 col-md-6 mb-4">
                    <div class="metric-card">
                        <div class="metric-icon">
                            <i class="fas fa-clipboard-list text-primary"></i>
                        </div>
                        <div class="metric-content">
                            <h3 class="metric-number" id="totalOrders">0</h3>
                            <p class="metric-label">Total Orders</p>
                            <div class="metric-change positive">
                                <i class="fas fa-arrow-up"></i>
                                <span id="orderChange">+12.5%</span>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-lg-3 col-md-6 mb-4">
                    <div class="metric-card">
                        <div class="metric-icon">
                            <i class="fas fa-rupee-sign text-success"></i>
                        </div>
                        <div class="metric-content">
                            <h3 class="metric-number" id="totalRevenue">₹0</h3>
                            <p class="metric-label">Total Revenue</p>
                            <div class="metric-change positive">
                                <i class="fas fa-arrow-up"></i>
                                <span id="revenueChange">+8.3%</span>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-lg-3 col-md-6 mb-4">
                    <div class="metric-card">
                        <div class="metric-icon">
                            <i class="fas fa-users text-warning"></i>
                        </div>
                        <div class="metric-content">
                            <h3 class="metric-number" id="totalCustomers">0</h3>
                            <p class="metric-label">Total Customers</p>
                            <div class="metric-change positive">
                                <i class="fas fa-arrow-up"></i>
                                <span id="customerChange">+15.2%</span>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-lg-3 col-md-6 mb-4">
                    <div class="metric-card">
                        <div class="metric-icon">
                            <i class="fas fa-eye text-info"></i>
                        </div>
                        <div class="metric-content">
                            <h3 class="metric-number" id="totalViews">0</h3>
                            <p class="metric-label">Total Views</p>
                            <div class="metric-change positive">
                                <i class="fas fa-arrow-up"></i>
                                <span id="viewChange">+22.1%</span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Charts Section -->
    <section class="charts-section">
        <div class="container-fluid">
            <div class="row">
                <!-- Revenue Chart -->
                <div class="col-lg-8 mb-4">
                    <div class="chart-card">
                        <div class="chart-header">
                            <h5 class="chart-title">
                                <i class="fas fa-chart-area me-2"></i>Revenue Trend
                            </h5>
                            <div class="chart-actions">
                                <button class="btn btn-sm btn-outline-secondary" id="revenueChartBtn">View Chart</button>
                            </div>
                        </div>
                        <div class="chart-body">
                            <canvas id="revenueChart" width="400" height="200"></canvas>
                        </div>
                    </div>
                </div>

                <!-- Category Distribution -->
                <div class="col-lg-4 mb-4">
                    <div class="chart-card">
                        <div class="chart-header">
                            <h5 class="chart-title">
                                <i class="fas fa-chart-pie me-2"></i>Category Distribution
                            </h5>
                        </div>
                        <div class="chart-body">
                            <canvas id="categoryChart" width="400" height="200"></canvas>
                        </div>
                    </div>
                </div>
            </div>

            <div class="row">
                <!-- Top Products -->
                <div class="col-lg-6 mb-4">
                    <div class="chart-card">
                        <div class="chart-header">
                            <h5 class="chart-title">
                                <i class="fas fa-star me-2"></i>Top Performing Products
                            </h5>
                        </div>
                        <div class="chart-body">
                            <div id="topProductsList">
                                <!-- Top products will be loaded here -->
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Recent Activity -->
                <div class="col-lg-6 mb-4">
                    <div class="chart-card">
                        <div class="chart-header">
                            <h5 class="chart-title">
                                <i class="fas fa-clock me-2"></i>Recent Activity
                            </h5>
                        </div>
                        <div class="chart-body">
                            <div id="recentActivityList">
                                <!-- Recent activity will be loaded here -->
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Detailed Analytics -->
    <section class="detailed-analytics">
        <div class="container-fluid">
            <div class="row">
                <!-- Sales by Category -->
                <div class="col-lg-6 mb-4">
                    <div class="chart-card">
                        <div class="chart-header">
                            <h5 class="chart-title">
                                <i class="fas fa-chart-bar me-2"></i>Sales by Category
                            </h5>
                        </div>
                        <div class="chart-body">
                            <canvas id="salesByCategoryChart" width="400" height="200"></canvas>
                        </div>
                    </div>
                </div>

                <!-- Customer Demographics -->
                <div class="col-lg-6 mb-4">
                    <div class="chart-card">
                        <div class="chart-header">
                            <h5 class="chart-title">
                                <i class="fas fa-users me-2"></i>Customer Demographics
                            </h5>
                        </div>
                        <div class="chart-body">
                            <canvas id="demographicsChart" width="400" height="200"></canvas>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</div>

