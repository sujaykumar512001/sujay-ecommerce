<!-- Chart.js CDN -->
<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>

<!-- Analytics Dashboard JavaScript -->
<script>
document.addEventListener('DOMContentLoaded', function() {
    // Initialize charts
    let revenueChart, categoryChart, salesByCategoryChart, demographicsChart;

    // Load analytics data
    loadAnalytics();

    // Date range change handler
    document.getElementById('dateRange').addEventListener('change', function() {
        loadAnalytics();
    });

    function loadAnalytics() {
        const dateRange = document.getElementById('dateRange').value;
        
        // Load key metrics
        loadKeyMetrics(dateRange);
        
        // Load charts
        loadRevenueChart(dateRange);
        loadCategoryChart();
        loadSalesByCategoryChart();
        loadDemographicsChart();
        
        // Load lists
        loadTopProducts();
        loadRecentActivity();
    }

    function loadKeyMetrics(dateRange) {
        // Simulate API call for key metrics
        const metrics = {
            totalOrders: 1247,
            totalRevenue: 284750,
            totalCustomers: 892,
            totalViews: 15678,
            orderChange: '+12.5%',
            revenueChange: '+8.3%',
            customerChange: '+15.2%',
            viewChange: '+22.1%'
        };

        // Update DOM
        document.getElementById('totalOrders').textContent = metrics.totalOrders.toLocaleString();
        document.getElementById('totalRevenue').textContent = '₹' + metrics.totalRevenue.toLocaleString();
        document.getElementById('totalCustomers').textContent = metrics.totalCustomers.toLocaleString();
        document.getElementById('totalViews').textContent = metrics.totalViews.toLocaleString();
        
        document.getElementById('orderChange').textContent = metrics.orderChange;
        document.getElementById('revenueChange').textContent = metrics.revenueChange;
        document.getElementById('customerChange').textContent = metrics.customerChange;
        document.getElementById('viewChange').textContent = metrics.viewChange;
    }

    function loadRevenueChart(dateRange) {
        const ctx = document.getElementById('revenueChart').getContext('2d');
        
        // Sample data
        const labels = ['Jan', 'Feb', 'Mar', 'Apr', 'May', 'Jun'];
        const data = [45000, 52000, 48000, 61000, 55000, 68000];

        if (revenueChart) {
            revenueChart.destroy();
        }

        revenueChart = new Chart(ctx, {
            type: 'line',
            data: {
                labels: labels,
                datasets: [{
                    label: 'Revenue (₹)',
                    data: data,
                    borderColor: '#667eea',
                    backgroundColor: 'rgba(102, 126, 234, 0.1)',
                    borderWidth: 3,
                    fill: true,
                    tension: 0.4
                }]
            },
            options: {
                responsive: true,
                maintainAspectRatio: false,
                plugins: {
                    legend: {
                        display: false
                    }
                },
                scales: {
                    y: {
                        beginAtZero: true,
                        ticks: {
                            callback: function(value) {
                                return '₹' + value.toLocaleString();
                            }
                        }
                    }
                }
            }
        });
    }

    function loadCategoryChart() {
        const ctx = document.getElementById('categoryChart').getContext('2d');
        
        // Sample data
        const data = {
            labels: ['Men', 'Women', 'Kids', 'Paintings'],
            datasets: [{
                data: [35, 40, 15, 10],
                backgroundColor: [
                    '#667eea',
                    '#764ba2',
                    '#f093fb',
                    '#f5576c'
                ],
                borderWidth: 0
            }]
        };

        if (categoryChart) {
            categoryChart.destroy();
        }

        categoryChart = new Chart(ctx, {
            type: 'doughnut',
            data: data,
            options: {
                responsive: true,
                maintainAspectRatio: false,
                plugins: {
                    legend: {
                        position: 'bottom'
                    }
                }
            }
        });
    }

    function loadSalesByCategoryChart() {
        const ctx = document.getElementById('salesByCategoryChart').getContext('2d');
        
        // Sample data
        const data = {
            labels: ['Men', 'Women', 'Kids', 'Paintings'],
            datasets: [{
                label: 'Sales',
                data: [120, 150, 60, 40],
                backgroundColor: [
                    'rgba(102, 126, 234, 0.8)',
                    'rgba(118, 75, 162, 0.8)',
                    'rgba(240, 147, 251, 0.8)',
                    'rgba(245, 87, 108, 0.8)'
                ],
                borderWidth: 0
            }]
        };

        if (salesByCategoryChart) {
            salesByCategoryChart.destroy();
        }

        salesByCategoryChart = new Chart(ctx, {
            type: 'bar',
            data: data,
            options: {
                responsive: true,
                maintainAspectRatio: false,
                plugins: {
                    legend: {
                        display: false
                    }
                },
                scales: {
                    y: {
                        beginAtZero: true
                    }
                }
            }
        });
    }

    function loadDemographicsChart() {
        const ctx = document.getElementById('demographicsChart').getContext('2d');
        
        // Sample data
        const data = {
            labels: ['18-25', '26-35', '36-45', '46+'],
            datasets: [{
                label: 'Customers',
                data: [30, 45, 20, 5],
                backgroundColor: [
                    'rgba(102, 126, 234, 0.8)',
                    'rgba(118, 75, 162, 0.8)',
                    'rgba(240, 147, 251, 0.8)',
                    'rgba(245, 87, 108, 0.8)'
                ],
                borderWidth: 0
            }]
        };

        if (demographicsChart) {
            demographicsChart.destroy();
        }

        demographicsChart = new Chart(ctx, {
            type: 'bar',
            data: data,
            options: {
                responsive: true,
                maintainAspectRatio: false,
                plugins: {
                    legend: {
                        display: false
                    }
                },
                scales: {
                    y: {
                        beginAtZero: true
                    }
                }
            }
        });
    }

    function loadTopProducts() {
        const topProducts = [
            { name: 'Elegant Women\'s Dress', sales: 45, revenue: 58455 },
            { name: 'Men\'s Casual Shirt', sales: 38, revenue: 34162 },
            { name: 'Abstract Art Painting', sales: 32, revenue: 79968 },
            { name: 'Women\'s Handbag', sales: 28, revenue: 53172 },
            { name: 'Kids Summer Dress', sales: 25, revenue: 14975 }
        ];

        const container = document.getElementById('topProductsList');
        container.innerHTML = topProducts.map((product, index) => `
            <div class="top-product-item">
                <div class="product-rank">${index + 1}</div>
                <div class="product-info">
                    <div class="product-name">${product.name}</div>
                    <div class="product-stats">
                        ${product.sales} sales • <span class="product-sales">₹${product.revenue.toLocaleString()}</span>
                    </div>
                </div>
            </div>
        `).join('');
    }

    function loadRecentActivity() {
        const activities = [
            { type: 'order', text: 'New order #1234 received', time: '2 minutes ago' },
            { type: 'sale', text: 'Product "Men\'s Casual Shirt" sold', time: '5 minutes ago' },
            { type: 'user', text: 'New customer registered', time: '10 minutes ago' },
            { type: 'order', text: 'Order #1233 completed', time: '15 minutes ago' },
            { type: 'sale', text: 'Product "Women\'s Dress" sold', time: '20 minutes ago' }
        ];

        const container = document.getElementById('recentActivityList');
        container.innerHTML = activities.map(activity => `
            <div class="activity-item">
                <div class="activity-icon ${activity.type}">
                    <i class="fas fa-${activity.type === 'order' ? 'shopping-cart' : activity.type === 'sale' ? 'rupee-sign' : 'user'}"></i>
                </div>
                <div class="activity-content">
                    <div class="activity-text">${activity.text}</div>
                    <div class="activity-time">${activity.time}</div>
                </div>
            </div>
        `).join('');
    }

    // Real-time updates (simulated)
    setInterval(() => {
        // Update metrics with small random changes
        const currentOrders = parseInt(document.getElementById('totalOrders').textContent.replace(/,/g, ''));
        const newOrders = currentOrders + Math.floor(Math.random() * 3);
        document.getElementById('totalOrders').textContent = newOrders.toLocaleString();
    }, 30000); // Update every 30 seconds

    console.log('Analytics dashboard loaded successfully!');
});
</script> 