<!-- Error Page Content -->
<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-lg-8 text-center">
            <div class="error-page">
                <div class="error-icon">
                    <i class="fas fa-exclamation-triangle fa-5x text-warning mb-4"></i>
                </div>
                <h1 class="error-title">Oops! Something went wrong</h1>
                <p class="error-message">
                    <% if (typeof message !== 'undefined' && message) { %>
                        <%= message %>
                    <% } else { %>
                        We're sorry, but something went wrong. Please try again later.
                    <% } %>
                </p>
                <div class="error-actions">
                    <a href="/" class="btn btn-primary btn-lg me-3">
                        <i class="fas fa-home me-2"></i>Go Home
                    </a>
                    <a href="/client/shop" class="btn btn-outline-primary btn-lg">
                        <i class="fas fa-shopping-bag me-2"></i>Continue Shopping
                    </a>
                </div>
                <div class="error-help mt-4">
                    <p class="text-muted">Need help? Contact our support team</p>
                    <a href="mailto:yadavjay512001@gmail.com" class="btn btn-link">
                        <i class="fas fa-envelope me-2"></i>yadavjay512001@gmail.com
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Error Page Specific CSS -->
<style>
    .error-page {
        padding: 3rem 0;
    }
    
    .error-icon {
        margin-bottom: 2rem;
    }
    
    .error-title {
        font-size: 2.5rem;
        font-weight: 700;
        color: #333;
        margin-bottom: 1rem;
    }
    
    .error-message {
        font-size: 1.2rem;
        color: #666;
        margin-bottom: 2rem;
        max-width: 600px;
        margin-left: auto;
        margin-right: auto;
    }
    
    .error-actions {
        margin-bottom: 2rem;
    }
    
    .error-actions .btn {
        padding: 12px 30px;
        border-radius: 25px;
        font-weight: 600;
        text-decoration: none;
        transition: all 0.3s ease;
    }
    
    .error-actions .btn:hover {
        transform: translateY(-2px);
        box-shadow: 0 8px 25px rgba(0,0,0,0.2);
    }
    
    .error-help {
        border-top: 1px solid #eee;
        padding-top: 2rem;
    }
    
    .error-help p {
        margin-bottom: 1rem;
    }
    
    .error-help .btn-link {
        color: #667eea;
        text-decoration: none;
        font-weight: 500;
    }
    
    .error-help .btn-link:hover {
        color: #5a6fd8;
        text-decoration: underline;
    }
    
    @media (max-width: 768px) {
        .error-title {
            font-size: 2rem;
        }
        
        .error-message {
            font-size: 1.1rem;
        }
        
        .error-actions .btn {
            display: block;
            margin-bottom: 1rem;
            width: 100%;
        }
    }
</style>